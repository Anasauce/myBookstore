doctype html
html
  head
    link(href="https://fonts.googleapis.com/css?family=Monoton" rel="stylesheet")
    <link href="https://fonts.googleapis.com/css?family=Dosis|Gudea|Quattrocento+Sans" rel="stylesheet">
    link(href="https://fonts.googleapis.com/css?family=Raleway:300,400,600" rel="stylesheet")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
    link(rel="stylesheet" href="/stylesheets/style.css")
    block title
      title myBookstore: Tech Resources
  body.container-fluid
    .header.col-lg-12.col-md-12.col-sm-12.col-xs-12.container-fluid
      .container-fluid.col-lg-1.col-md-1.col-sm-2.col-xs-6
        .logocontainer
          a(href=`/`)
            img.logo(src='https://pbs.twimg.com/profile_images/503696801161953281/IyV59ozo_400x400.png')
      .container-fluid.col-lg-4.col-md-4.col-sm-6.col.xs-6
        a.logotype(href=`/`)
          h1 myBookstore
        h3.subhead Web Development Books for Everybody
      .container-fluid.col-lg-4.col-md-4.col-sm-4.col.xs-6.search-space
        a.btn(value="Admin Login" href='/users/login') Admin Login
        a.btn(value="Admin Signup" href='/users/signup') Admin Sign Up
      .container-fluid.col-lg-3.col-md-3.col-sm-12.col.xs-6.search-space
        form(action="/", method="get").pull-right

          .container-fluid.col-lg-9.col-md-9.col-sm-9.col.xs-12
            input.form(type="text", name="search_query", placeholder="Author, Title, Genre")
          .container-fluid.col-lg-3.col-md-3.col-sm-3.col.xs-12
            input.btn.pull-right(type="submit", value="find")

    block content
