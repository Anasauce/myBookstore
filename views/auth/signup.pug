extends ../layout

block content
  if message
    div.error-message= message
  
  .container.form-margin
    h2.top-margin Create an Administrator Account
    form(method='post')
      .form-group.row.form-space 
        label.col-sm-2.col-form-label Email
        .col-lg-8-.col-sm-10
          input.form-control(type='text', name='email')
      .form-group.row
        label.col-sm-2.col-form-label Password
        .col-lg-8-.col-sm-10
          input.form-control(type='password', name='password')
      .form-group.row
        .offset-sm-2.col-sm-10
          input.btn(type='submit', value='Submit')